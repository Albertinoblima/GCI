{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "UpdateSecretariaInput",
    "description": "Schema para a atualização de uma secretaria existente",
    "type": "object",
    "properties": {
        "nome": {
            "type": "string",
            "minLength": 2,
            "maxLength": 255
        },
        "emoji": {
            "type": [
                "string",
                "null"
            ],
            "maxLength": 10
        },
        "descricao": {
            "type": [
                "string",
                "null"
            ],
            "maxLength": 1000
        },
        "email_responsavel": {
            "type": [
                "string",
                "null"
            ],
            "format": "email",
            "maxLength": 255
        },
        "texto_boas_vindas_especifico": {
            "type": [
                "string",
                "null"
            ]
        },
        "ativo": {
            "type": "boolean"
        }
    },
    "additionalProperties": false,
    "minProperties": 1
}