{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Secretaria",
  "description": "Schema para criação e atualização de uma secretaria municipal.",
  "type": "object",
  "properties": {
    "nome": {
      "type": "string",
      "description": "Nome da secretaria.",
      "minLength": 3,
      "maxLength": 150
    },
    "ativo": {
      "type": "boolean",
      "description": "Controla se a secretaria está ativa.",
      "default": true
    }
  },
  "required": [
    "nome"
  ],
  "additionalProperties": false
}